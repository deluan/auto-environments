#!/usr/bin/env ruby

require 'yaml'
Dir['./lib/*.rb'].each {|file| require file }

Dir['./environments/*.yml'].each { |filename|
    env_file = File.new filename
    environment = Environment.new env_file
    env_name = File.basename(env_file.path, '.yml')

    hosts_path = environment.create_inventory InventoryFile.new environment.domain, env_name

    playbook_path = environment.create_playbook PlaybookFile.new environment.domain, env_name

    ansible_command = "ANSIBLE_ROLES_PATH=#{ARGV[0]}/roles ansible-playbook #{playbook_path} -i #{hosts_path} -u vagrant -e app_user=petshop"
    puts "\n**** Provisioning #{env_name} ****\n\n"
    puts `#{ansible_command}`
}
